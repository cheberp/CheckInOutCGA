<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckInOutCGA.View.VistaBothInicio">
    <Grid ColumnDefinitions=".4*,*" HeightRequest="250"
          ColumnSpacing="30" Margin="0,0,0,0" Padding="0">
        <Label Text="{Binding Version,StringFormat='Version: {0}'}"
               Grid.Column="0"
               HorizontalOptions="Start"
               VerticalTextAlignment="Center"
               VerticalOptions="Center"
               Margin="0,0,0,20"/>
        <Image Source="https://i.ibb.co/B28SbSg/bjcga1-50-removebg.png"
               Margin="0"
               Grid.Column="1"
               HorizontalOptions="End"
               HeightRequest="250"
               WidthRequest="250"/>
    </Grid>
</ContentView>

